@using BaseApp.Web.Areas.Admin.Models.User
@model BaseApp.Web.Areas.Admin.Models.User.UserEditModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<form asp-action="Edit" class="form-horizontal">
    <p>
        @Html.ValidationSummary(true)
    </p>
    <fieldset>
        <legend>User Profile</legend>
        <input asp-for="Id" type="hidden" />

        <div class="form-group">
            <label asp-for="FirstName" class="col-sm-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="col-sm-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Login" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email"></span>
            </div>
        </div>

        @if (Model.Id != null)
        {
            <input asp-for="Password" type="hidden" />
            <input asp-for="ConfirmPassword" type="hidden" />
        }
        else
        {
            <div class="form-group">
                <label asp-for="Password" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
        }

        <div class="form-group">
            @foreach (var role in DataItems.Roles)
            {
                <div class="col-sm-offset-2 col-sm-9">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="Roles" id="Roles" value="@role.Value"
                                   @if (Model.Roles.Contains(int.Parse(role.Value))) { @: checked="checked"
                                    } />
                            @role.Text
                        </label>
                    </div>
                </div>
            }
            <span asp-validation-for="Roles"></span>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </fieldset>
</form>