@using BaseApp.Common
@model BaseApp.Web.Models.Account.ChangePasswordModel
@{
    Layout = null;
}

<p>
    Use the form below to change your password.
</p>
<p>
    New passwords are required to be a minimum of @Constants.MinPasswordLength characters in length.
</p>

<form asp-controller="Account" asp-action="_ChangePassword" class="form">
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label"></label>
        <input asp-for="OldPassword" type="password" class="form-control" />
        <span asp-validation-for="OldPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label"></label>
        <input asp-for="NewPassword" type="password" class="form-control" />
        <span asp-validation-for="NewPassword"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
</form>
